<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        android:id="@+id/loadingTransition"
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="@integer/quick_animation_duration"
        motion:motionInterpolator="linear">
        <KeyFrameSet />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/loadingButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/large_button_height"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_marginEnd="@dimen/medium_margin"
            android:layout_marginBottom="@dimen/medium_margin"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent">
            <CustomAttribute
                motion:attributeName="downloadProgress"
                motion:customFloatValue="@fraction/start_animation_percentage" />
        </Constraint>
        <Constraint
            android:id="@+id/progressCircleView"
            android:layout_width="@dimen/medium_view_size"
            android:layout_height="@dimen/medium_view_size"
            motion:layout_constraintBottom_toBottomOf="@id/loadingButton"
            motion:layout_constraintEnd_toEndOf="@id/loadingButton"
            motion:layout_constraintHorizontal_bias="0.8"
            motion:layout_constraintStart_toStartOf="@id/loadingButton"
            motion:layout_constraintTop_toTopOf="@+id/loadingButton">
            <CustomAttribute
                motion:attributeName="downloadProgressDegrees"
                motion:customIntegerValue="@integer/start_animation_degrees" />
            <CustomAttribute
                motion:attributeName="circleProgressDefaultColor"
                motion:customColorValue="@color/colorAlertAccent" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

        <Constraint
            android:id="@+id/loadingButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/large_button_height"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_marginEnd="@dimen/medium_margin"
            android:layout_marginBottom="@dimen/medium_margin"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent">
            <CustomAttribute
                motion:attributeName="downloadProgress"
                motion:customFloatValue="@fraction/completed_animation_percentage" />
        </Constraint>
        <Constraint
            android:id="@+id/progressCircleView"
            android:layout_width="@dimen/medium_view_size"
            android:layout_height="@dimen/medium_view_size"
            motion:layout_constraintBottom_toBottomOf="@id/loadingButton"
            motion:layout_constraintEnd_toEndOf="@id/loadingButton"
            motion:layout_constraintHorizontal_bias="0.8"
            motion:layout_constraintStart_toStartOf="@id/loadingButton"
            motion:layout_constraintTop_toTopOf="@+id/loadingButton">
            <CustomAttribute
                motion:attributeName="downloadProgressDegrees"
                motion:customIntegerValue="@integer/completed_animation_degrees" />
            <CustomAttribute
                motion:attributeName="circleProgressDefaultColor"
                motion:customColorValue="@color/colorAccent" />
        </Constraint>
    </ConstraintSet>
</MotionScene>